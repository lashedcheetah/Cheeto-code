operator = input("Enter an operator. (+, -, *, /): ")

num1 = float(input("please input a number: "))
num2 = float(input("please input a number: "))

if operator == "+" :
    print(num1 + num2)
elif operator == "-":
    print(num1 - num2)
elif operator == "/":
    print(num1 / num2)
elif operator == "*":
    print(num1 * num2)
else:
    print(f"{operator} is not a valid operator.")
